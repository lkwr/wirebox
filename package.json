{
  "name": "wirebox",
  "version": "0.5.1",
  "type": "module",
  "module": "./src/index.js",
  "description": "A simple but flexible dependency injection library.",
  "keywords": [
    "dependency injection",
    "di",
    "ioc",
    "inversion of control",
    "typescript"
  ],
  "homepage": "https://github.com/lkwr/wirebox#readme",
  "bugs": {
    "url": "https://github.com/lkwr/wirebox/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lkwr/wirebox.git"
  },
  "license": "MIT",
  "author": "Lukas Heizmann",
  "scripts": {
    "format": "biome format --write .",
    "check": "biome check .",
    "build": "bun run ./build.ts",
    "build:docs": "typedoc --options ./typedoc.config.ts",
    "release": "bun run build && npm publish --access public ./dist"
  },
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@types/bun": "^1.3.2",
    "tsdown": "^0.15.12",
    "typedoc": "^0.28.14",
    "typedoc-github-theme": "^0.3.1",
    "typescript": "^5.9.3"
  }
}
